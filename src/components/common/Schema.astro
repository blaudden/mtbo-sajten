---
import { SITE } from '~/utils/config';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';

// Breadcrumb Schema
const pathSegments = currentPath.split('/').filter((segment) => segment);
const breadcrumbList = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: new URL('/', Astro.site).toString(),
    },
    ...pathSegments.map((segment, index) => ({
      '@type': 'ListItem',
      position: index + 2,
      name: segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' '),
      item: new URL(`/${pathSegments.slice(0, index + 1).join('/')}`, Astro.site).toString(),
    })),
  ],
};

// WebSite Schema
let websiteSchema: Record<string, unknown> | null = null;
if (metadata?.schema?.website) {
  websiteSchema = metadata.schema.website;
} else if (isHome) {
  websiteSchema = {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: SITE.name,
    url: Astro.site?.toString(),
    publisher: {
      '@type': 'Organization',
      name: 'Swedish MTBO Community',
    },
    description: 'Det officiella communityt för mountainbikeorientering i Sverige.',
    sameAs: [
      'https://www.facebook.com/mountainbikeorientering',
      'https://instagram.com/mountainbikeorientering',
      'https://www.youtube.com/@mountainbikeorientering',
    ],
  };
}

// BlogPosting Schema
let blogPostingSchema: Record<string, unknown> | null = null;
if (metadata?.openGraph?.type === 'article') {
  blogPostingSchema = {
    '@context': 'https://schema.org',
    '@type': 'BlogPosting',
    headline: metadata.title,
    image: metadata.openGraph?.images?.[0]?.url,
    datePublished: metadata.openGraph?.article?.publishedTime,
    dateModified: metadata.openGraph?.article?.modifiedTime,
    author: {
      '@type': 'Person',
      name: 'Magnus Blåudd',
    },
    description: metadata.description,
  };
}
---

<!-- Breadcrumb Schema -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbList)} />

<!-- WebSite Schema -->{
  websiteSchema && <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
}

<!-- BlogPosting Schema -->
{blogPostingSchema && <script is:inline type="application/ld+json" set:html={JSON.stringify(blogPostingSchema)} />}
